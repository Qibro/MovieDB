<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mibrahim.movie">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.mibrahim.movie.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.mibrahim.movie.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.mibrahim.movie.detail.DetailMovieActivity"
            android:label="@string/title_activity_detail_home"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>